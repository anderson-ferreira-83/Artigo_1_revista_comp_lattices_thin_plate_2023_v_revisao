            "type": "shell",
            "command": "pdflatex",
            "args": [
                "-interaction=nonstopmode",
                "manuscript_mssp2_vf.tex"
            ],
            "group": "build",
            "dependsOrder": "sequence",
            "dependsOn": ["BibTeX", "Build LaTeX Final"],
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "BibTeX",
            "type": "shell",
            "command": "bibtex",
            "args": ["manuscript_mssp2_vf"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
            "label": "Build LaTeX Final",
            "type": "shell",
            "command": "pdflatex",
            "args": [
                "-interaction=nonstopmode",
                "manuscript_mssp2_vf.tex"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared"
            }
        },
        {
